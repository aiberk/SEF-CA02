<div class="data-form contentWrapper">
  <form
    class="columnWrapper userForms centerWrapper"
    action="/user/login"
    method="POST">
    <h2>Log In:</h2>
    <div class="contentWrapper">
      <label for="inputEmail">Email address</label>
      <input
        type="text"
        name="email"
        id="inputEmail"
        placeholder="Email address" />
    </div>
    <div class="contentWrapper">
      <label for="inputPassword">Password</label>
      <input
        type="password"
        name="password"
        id="inputPassword"
        placeholder="Password" />
    </div>

    <div class="contentWrapper">
      <button type="submit">Log in</button>
    </div>
    <div class="contentWrapper centerWrapper">
      Dont have an account?
      <a href="/user/new">Create an account</a>
    </div>
  </form>
</div>
